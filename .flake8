# -*- mode: conf; -*-
[flake8]
exclude =
    venv
ignore =
    # expected 2 blank lines...
    # ...between functions and classes
    E302
    # ...after functions and classes
    E305
    # line too long
    E501
    # various errors about the * imports
    # that we use for entity ID variables
    F401
    F403
    F405
    # line break after binary operator
    W504
